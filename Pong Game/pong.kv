#:kivy 1.0.9


# The name of the kv file, e.g. pong.kv, must match the name of the app, 
# e.g. PongApp (the part before the App ending).
#
# The first line above is required in every kv file. 

# PongBall Widget
<PongBall>:
    size: 50, 50 
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size    
<PongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size



# PongGame Widget
# A block defined with a class name inside the < and > characters is 
# a Widget rule. It will be applied to any instance of the named class.
#
<PongGame>:    

    # Set an object property that can be referenced in code
    # The property name is 'ball'
    # The value of the property 'pong_ball' is the id of the 
    # child widget instance below
    ball: pong_ball

    player1: player_left
    player2: player_right

    # Every widget has its own Canvas on which to draw
    canvas:

        # Draw a rectangle on the canvas
        # This rectange forms the center bar
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
            
    # Child widget
    Label:
        font_size: 70  
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
        
    # Child widget
    Label:
        font_size: 70  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    # Child widget
    PongBall:
        # This id is referenced 
        id: pong_ball
        center: self.parent.center

        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
        

